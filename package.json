{
  "name": "ecommerce-price-tracker",
  "version": "1.0.0",
  "description": "Track product prices across e-commerce platforms with price-drop alerts",
  "main": "server.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "scrape": "node scripts/scrapeProducts.js",
    "build": "npm install && cd client && npm install && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "keywords": [
    "price-tracker",
    "web-scraping",
    "e-commerce",
    "price-alerts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "puppeteer": "^21.6.1",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "express-validator": "^7.0.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
